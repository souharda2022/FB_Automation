{
  "manifest_version": 3,
  "name": "Facebook Comment Scraper",
  "version": "1.0",
  "description": "Scrape Facebook comments and export to CSV",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Comment Scraper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}